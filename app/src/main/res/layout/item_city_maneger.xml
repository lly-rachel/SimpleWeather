<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/city_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"

        android:background="@drawable/frag_bg"

        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/city_maneger_cityname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="梅州"
                android:textSize="30sp"
                android:paddingLeft="100dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/city_maneger_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30℃"
                android:textSize="50sp"
                android:paddingRight="30dp"

                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/city_maneger_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"

                android:layout_marginTop="60dp"

                />
            <TextView
                android:id="@+id/city_maneger_cityupdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-04-26"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/city_maneger_line"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>